@model ShieldRPG.Models.CenterLabRequest

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Запрос на регионалку</title>
</head>
<body>

    <h4>Запрос на регионалку от @Model.UserName</h4>
    <hr />

    @using (Html.BeginForm("EditCenterLabRequest", "Master", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-9">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p class="align-content-start">@Model.Request</p>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Response" class="control-label"></label>
                    <textarea asp-for="Response" class="form-control"></textarea>
                    <span asp-validation-for="Response" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <input asp-for="Id" type="hidden" />
    }

    <div>
        <a asp-action="CenterLab">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
