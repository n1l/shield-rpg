@model ShieldRPG.Models.DnaRequest

@{
    ViewData["Title"] = "Анализ ДНК";
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="DnaRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BloodCode" class="control-label"></label>
                <input asp-for="BloodCode" class="form-control" />
                <span asp-validation-for="BloodCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запрос" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
